#include<bits/stdc++.h>
using namespace std;
#define endl "\n"
#define ll long long int
#define ui unsigned int
#define fastIO ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define pi acos(-1.0)
void solve()
{
	int n; cin >> n;
	string x;
	cin >> x;
	int count = 0;
	for(int i=0; i<x.length(); i++)
	{
		
			if(x[i]==x[i+1]) count++;
		
	}
	cout << count << endl;
}
int main()
{
	#ifndef ONLINE_JUDGE
	freopen("input.txt", "r", stdin);
	freopen("output.txt", "w", stdout);
	#endif
	
	fastIO;
	solve();
	return 0;
}
